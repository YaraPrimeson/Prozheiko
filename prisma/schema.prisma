generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Tag {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  tag String @unique
}

model Admin {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  token String
}

model Slider {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  imageUrl    String
  description String
  href        String
}

model Article {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  tag       String
  imageUrl  String
  title     String
  blocks    Json
  like      String
  dislike   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Service {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  tag       String
  title     String
  text      String
  price     String
  list      String[]
  blocks    Json
  imageUrl  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Image {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  filename  String
  filepath  String
  createdAt DateTime @default(now())
}
