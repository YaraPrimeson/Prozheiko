generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Tag {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  tag String @unique
}

model Block {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  type  String
  value Json
}

model Article {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  tag      String
  title    String
  like     String
  dislike  String
  imageUrl String
  blocks   Json
}

model Service {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  tag     String
  like    Int
  dislike Int
  price   String
  list    String[]
  blocks  Json
}
